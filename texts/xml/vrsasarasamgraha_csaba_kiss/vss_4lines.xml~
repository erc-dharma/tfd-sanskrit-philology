<lg n="19.1" met="anuṣṭubh">

<l n="uvaca">vigatarāga uvāca</l>


<l n="a">kriyāsūkṣmo mahādharmaḥ</l>
<l n="b">karmaṇā kena prāpyate</l>

<l n="c">alpopāyaṁ narārthāya</l>
<l n="d">pr̥cchāmi kathayasva me</l>
</lg>

<lg n="19.2" met="anuṣṭubh">

<l n="uvaca">anarthayajña uvāca</l>


<l n="a">alpopāyaṁ mahādharmaṁ</l>
<l n="b">kathayāmi dvijottama</l>

<l n="c">sukhena labhate svargaṁ</l>
<l n="d">karmaṇā yena tac chr̥ṇu</l>
</lg>

<lg n="19.3" met="anuṣṭubh">

<l n="a">lokānaṁ mātaro gāvo</l>
<l n="b">gobhiḥ sarvaṁ jagad dhr̥tam</l>

<l n="c">gomayam amr̥taṁ sarvaṁ</l>
<l n="d">jātaṁ sarvaśivecchayā</l>
</lg>

<lg n="19.4" met="anuṣṭubh">

<l n="a">sarvadevamayī gāvaḥ</l>
<l n="b">sarvadevamayo dvijaḥ</l>

<l n="c">sarvadevamayo bhūmiḥ</l>
<l n="d">sarvadevamayaḥ śivaḥ</l>
</lg>

<lg n="19.5" met="anuṣṭubh">

<l n="a">tasmād gāvaḥ sadā sevyā</l>
<l n="b">dharmamokṣārthasiddhidā</l>

<l n="c">paricaryā yathāśaktyā</l>
<l n="d">grāsavāsajalādibhiḥ</l>
</lg>

<lg n="19.6" met="anuṣṭubh">

<l n="a">tāḍayen nātivegena</l>
<l n="b">vācayen mr̥dunācaret</l>

<l n="c">pālayan tarpanād yeṣu</l>
<l n="d">bhagnodvigneṣu yatnataḥ</l>
</lg>

<lg n="19.7" met="anuṣṭubh">

<l n="a">vyādhivanaparikleśa</l>
<l n="b">oṣadhopakramaś caret</l>

<l n="c">kaṇḍūyanaṁ ca kartavyaṁ</l>
<l n="d">yathāsaukhyaṁ bhaved gavām</l>
</lg>

<lg n="19.8" met="anuṣṭubh">

<l n="a">gavāṁ pradakṣiṇaṁ kr̥tvā</l>
<l n="b">śraddhābhaktisamanvitaḥ</l>

<l n="c">sāgarāntā mahī sarvā</l>
<l n="d">n pradakṣiṇīkr̥tā bhavet</l>
<l n="c">sāgarāntā mahī sarvā n</l>
<l n="d">pradakṣiṇīkr̥tā bhavet</l>
</lg>

<lg n="19.9" met="anuṣṭubh">

<l n="a">pr̥ṣṭasaṁsparśanād yañ ca</l>
<l n="b">śraddhayā yadi mānavaḥ</l>

<l n="c">ahorātrakr̥taṁ pāpaṁ</l>
<l n="d">naśyate nātrasaṁśayaḥ</l>
</lg>

<lg n="19.10" met="anuṣṭubh">

<l n="a">lāṅgūlenoddhr̥taṁ toyaṁ</l>
<l n="b">mūrddhnā gr̥hṇāti yo naraḥ</l>

<l n="c">yāvaj jīva kr̥taṁ pāpaṁ</l>
<l n="d">naśyate nātra saṁśayaḥ</l>
</lg>

<lg n="19.11" met="anuṣṭubh">

<l n="a">vidhivat snāpayed gāṁś ca</l>
<l n="b">mantrayuktena vāriṇā</l>

<l n="c">tenāmbhasā svayaṁ snātvā</l>
<l n="d">sarvapāpakṣayo bhavet</l>
</lg>

<lg n="19.12" met="anuṣṭubh">

<l n="a">vyādhivighnam alakṣmītvaṁ</l>
<l n="b">naśyate sadya eva ca</l>

<l n="c">mr̥tāpatyāś ca gāvāś ca</l>
<l n="d">snānam eva praśasyate</l>
</lg>

<lg n="19.13" met="anuṣṭubh">

<l n="a">gavāṁ śr̥ṅgodakaṁ gr̥hya</l>
<l n="b">mūrdhni yo dhārayen naraḥ</l>

<l n="c">sa sarvatīrthasnānasya</l>
<l n="d">phalaṁ prāpnoti mānavaḥ</l>
</lg>

<lg n="19.14" met="anuṣṭubh">

<l n="a">grāsamuṣṭipradānena</l>
<l n="b">goṣu bhaktisamanvitaḥ</l>

<l n="c">agnihotraṁ hutaṁ tena</l>
<l n="d">sarvadevāḥ sutarpitāḥ</l>
</lg>

<lg n="19.15" met="anuṣṭubh">

<l n="a">catvāraḥ stanadhārās tu</l>
<l n="b">yas tu mūrdhnā pratīcchati</l>

<l n="c">sa catuḥsāgaraṁ gatvā</l>
<l n="d">snānapuṇyaphalaṁ labhet</l>
</lg>

<lg n="19.16" met="anuṣṭubh">

<l n="a">gavārthaṁ yas tyajet prāṇān</l>
<l n="b">gograheṣu dvijottama</l>

<l n="c">kalpakoṭiśataṁ divyaṁ</l>
<l n="d">śivaloke mahīyate</l>
</lg>

<lg n="19.17" met="anuṣṭubh">

<l n="a">cyutabhagnādisaṁskāraṁ</l>
<l n="b">sarvaṁ yaḥ kurute naraḥ</l>

<l n="c">bhāryākoṭiśataṁ dānaṁ</l>
<l n="d">yat phalaṁ parikīrtitam</l>
</lg>

<lg n="19.18" met="anuṣṭubh">

<l n="a">tatphalaṁ labhate martyaḥ</l>
<l n="b">śivalokaṁ ca gacchati</l>

<l n="c">śivalokaparibhraṣṭaḥ</l>
<l n="d">pr̥thivyām ekarāḍ bhavet</l>
</lg>

<lg n="19.19" met="anuṣṭubh">

<l n="a">samāsataḥ samākhyātaṁ</l>
<l n="b">yathātattvaṁ dvijottama</l>

<l n="cd">na śakyaṁ vistarād vaktiuṁ gomahātmyasamuttamam</l>

</lg>

<lg n="19.20" met="anuṣṭubh">

<l n="uvaca">vigatarāga uvāca</l>


<l n="a">devāḥ r aṣṭavidhāḥ proktāḥ</l>
<l n="b">tiryak pañcavidhaḥ smr̥taḥ</l>

<l n="c">mānuṣyam ekam evāhuś</l>
<l n="d">cāturvarṇyaḥ kathaṁ bhavet</l>
</lg>

<lg n="19.21" met="anuṣṭubh">

<l n="uvaca">anarthayajña uvāca</l>


<l n="a">pūrvakalpasr̥jaty eṣa</l>
<l n="b">viṣṇunā prabhaviṣṇunā</l>

<l n="c">evaṁ varṇā dvijaś cāsīt</l>
<l n="d">sarvakalpāgram agrataḥ</l>
</lg>

<lg n="19.22" met="anuṣṭubh">

<l n="a">sarvavedavido viprāḥ</l>
<l n="b">sarvavedavidas tathā</l>

<l n="c">tathā viprasahasrāṇāṁ</l>
<l n="d">yajñotsāhamano bhavet</l>
</lg>

<lg n="19.23" met="anuṣṭubh">

<l n="a">vr̥ddhaviprasahasrāṇāṁ</l>
<l n="b">matam āśritya brāhmaṇaiḥ</l>

<l n="cd">kartuṁ karma samārabdhakarmaś cāpi vibhajyate</l>

</lg>

<lg n="19.24" met="anuṣṭubh">

<l n="a">r̥tvajatve sthitāḥ kecit</l>
<l n="b">kecit saṁrakṣaṇe sthitāḥ</l>

<l n="c">arthopārjanayuktān ye</l>
<l n="d">anye śilpe niyojitāḥ</l>
</lg>

<lg n="19.25" met="anuṣṭubh">

<l n="a">evaṁ yajñavidhānena</l>
<l n="b">kartum arebhire purā</l>

<l n="c">yathoddiṣṭena karmeṇa</l>
<l n="d">yajñotsāham avartata</l>
</lg>

<lg n="19.26" met="anuṣṭubh">

<l n="a">āgatā r̥ṣayaḥ sarve</l>
<l n="b">devatāḥ pitaras tathā</l>

<l n="c">anyonyam abruvan tatra</l>
<l n="d">devarṣipitr̥devatāḥ</l>
</lg>

<lg n="19.27" met="anuṣṭubh">

<l n="a">yajñārtam asr̥jad varṇaṁ</l>
<l n="b">vidhinā pātuhetavaḥ</l>

<l n="c">evam eva pravartantu</l>
<l n="d">bhavatir dvijasattamāḥ</l>
</lg>

<lg n="19.28" met="anuṣṭubh">

<l n="ab">ijyādhyādhyayanasampannā brahmaṇā yatra kalpitāḥ</l>


<l n="c">suviprā vipratāṁ yāntu</l>
<l n="d">ṣaḍkarmāniratāḥ sadā</l>
</lg>

<lg n="19.29" met="anuṣṭubh">

<l n="a">rakṣaṇārtaṁ tu ye viprāḥ</l>
<l n="b">kalpitāḥ śastrapāṇayaḥ</l>

<l n="c">kr̥tatrāṇāya viprāṇāṁ</l>
<l n="d">nityaṁ kṣātravratodbhavāḥ</l>
</lg>

<lg n="19.30" met="anuṣṭubh">

<l n="a">arthopārjanam uddiśya</l>
<l n="b">kalpitā ye dvijātayaḥ</l>

<l n="c">te tu vaiśyatvam āyāntu</l>
<l n="d">vārto āpaṇatodbhavāḥ</l>

<l n="e">vadhabandhanakarmeṣu</l>
<l n="f">śilpasthānavadheṣu ca</l>
</lg>

<lg n="19.31" met="anuṣṭubh">

<l n="a">kalpitā ye dvijātīnāṁ</l>
<l n="b">sarve śūdrā bhavantu te</l>

<l n="c">prājāpatyaṁ brāhmaṇānām</l>
<l n="d">ījyādhyayanatatparām</l>
</lg>

<lg n="19.32" met="anuṣṭubh">

<l n="a">sthānam aindraṁ kṣatriyāṇāṁ</l>
<l n="b">prajāpālanatatparam</l>

<l n="c">vaiśyānāṁ vāsavasthānaṁ</l>
<l n="d">vāṇijyaṁ kr̥ṣijīvinām</l>
</lg>

<lg n="19.33" met="anuṣṭubh">

<l n="a">śūdrāṇāṁ marutaḥ sthānaṁ</l>
<l n="b">śuśrūṣāniratātmanām</l>

<l n="c">maharṣipitr̥devānāṁ</l>
<l n="d">matam ājñāya niścitaḥ</l>

<l n="e">eṣa saṁkalpito brahmā</l>
<l n="f">padmayoniḥ pitāmahaḥ</l>
</lg>

<lg n="19.34" met="anuṣṭubh">

<l n="a">saṁkalpaprabhavāḥ sarve</l>
<l n="b">devadānavamānavāḥ</l>

<l n="c">paśupakṣimr̥gāmukhyā</l>
<l n="d">yāvanti jagasambhavāḥ</l>
</lg>

<lg n="19.35" met="anuṣṭubh">

<l n="a">bhūtasaṁkalpakartā ya</l>
<l n="b">kalpam āsīd dvijottama</l>

<l n="c">kīrtitāni samāsena</l>
<l n="d">kim anyac chrotum icchasi</l>
</lg>

<lg n="19.36" met="anuṣṭubh">

<l n="uvaca">vigatarāga uvāca</l>


<l n="a">kiṁ tapaḥ sarvavarṇānāṁ</l>
<l n="b">vr̥ttir vāpi tapodhana</l>

<l n="c">yajñāś caiva pr̥thaktvena</l>
<l n="d">śrotum icchāmi tattvataḥ</l>
</lg>

<lg n="19.37" met="anuṣṭubh">

<l n="uvaca">anarthayajña uvāca</l>


<l n="a">brāhmaṇasya tapo yajñāḥ</l>
<l n="b">- tapaḥ kṣātrasya rakṣaṇam</l>
<l n="a">brāhmaṇasya tapo yajñāḥ -</l>
<l n="b">tapaḥ kṣātrasya rakṣaṇam</l>

<l n="c">vaiśyaś ca tapa vāṇijya</l>
<l n="d">tapaḥ śūdrasya sevanam</l>
</lg>

<lg n="19.38" met="anuṣṭubh">

<l n="a">pratigraha dhano vipraḥ</l>
<l n="b">kṣatriyasya dhanur dhanam</l>

<l n="c">kr̥ṣir dhanaṁ tathā vaiśyaḥ</l>
<l n="d">śūdraḥ śuśrūṣaṇaṁ dhanam</l>
</lg>

<lg n="19.39" met="anuṣṭubh">

<l n="a">ārambhayajñaḥ kṣatrasya</l>
<l n="b">havir yajño viśas tathā</l>

<l n="c">śūdraḥ paricaro yajño</l>
<l n="d">japayajño dvijātayaḥ</l>
</lg>

<lg n="19.40" met="anuṣṭubh">

<l n="a">satya tīrtha dvijātīnāṁ</l>
<l n="b">raṇa tīrthaṁ tu kṣatriyāḥ</l>

<l n="c">āryā tīrthaṁ tu vaiśānāṁ</l>
<l n="d">! śūdratīrthaṁ tu vai dvijāḥ</l>
<l n="c">āryā tīrthaṁ tu vaiśānāṁ !</l>
<l n="d">śūdratīrthaṁ tu vai dvijāḥ</l>
</lg>

<lg n="19.41" met="anuṣṭubh">

<l n="a">nāsti vidyāsamo mitro</l>
<l n="b">nāsti dānasamaḥ sakhā</l>

<l n="c">nāsti jñānasamo bandur</l>
<l n="d">nāsti yajño japaḥ samaḥ</l>
</lg>

<lg n="19.42" met="anuṣṭubh">

<l n="a">dharmahīno mr̥tas tulyo</l>
<l n="b">devatulyo jitendriyaḥ</l>

<l n="c">yajñatulyo 'bhayaṁ dātā</l>
<l n="d">śivatulyao manonmanaḥ</l>
</lg>

<lg n="19.43" met="anuṣṭubh">

<l n="uvaca">vigatarāga uvāca</l>


<l n="a">dāna yajñas tapas tīrthaṁ</l>
<l n="b">saṁnyāsaṁ yoga eva ca</l>

<l n="c">eteṣu katamaḥ śreṣṭhaḥ</l>
<l n="d">śrotum icchāmi kīrtaya</l>
</lg>

<lg n="19.44" met="anuṣṭubh">

<l n="uvaca">anarthayajña uvāca</l>


<l n="a">dānadharmasahasrebhyaḥ</l>
<l n="b">yajñayājī viśiṣyate</l>

<l n="c">yajñayājīsahasrebhyas</l>
<l n="d">tīrthayātrī viśiṣyate</l>
</lg>

<lg n="19.45" met="anuṣṭubh">

<l n="a">tīrthayātrisahasrebhyas</l>
<l n="b">tapaniṣṭo viśiṣyate</l>

<l n="c">tapaniṣṭhasahasrebhyaḥ</l>
<l n="d">śreṣṭhaḥ saṁnyāsikaḥ smr̥taḥ</l>
</lg>

<lg n="19.46" met="anuṣṭubh">

<l n="a">saṁnyāsīnāṁ sahasrebhyaḥ</l>
<l n="b">śreṣṭho yac ya jitendriyaḥ</l>

<l n="c">jitendriyasahasrebhyaḥ</l>
<l n="d">yogayukto viśiṣyate</l>
</lg>

<lg n="19.47" met="anuṣṭubh">

<l n="a">yogayuktasahasrebhyaḥ</l>
<l n="b">śreṣṭho līnamanaḥ smr̥taḥ</l>

<l n="c">tasmāt sarvaprayatnena</l>
<l n="d">ādau mana viśodhayet</l>
</lg>

<lg n="19.48" met="anuṣṭubh">

<l n="a">nigr̥hītendriyagrāmaḥ</l>
<l n="b">svargamokṣau tu sādhanam</l>

<l n="c">viśiṣṭhe tv indriyagrāme</l>
<l n="d">tiryannarakasādhanam</l>
</lg>

<lg n="19.49" met="anuṣṭubh">

<l n="uvaca">vigatarāga uvāca</l>


<l n="a">carācarāṇāṁ bhūtānāṁ</l>
<l n="b">katamaḥ śreṣṭha ucyate</l>

<l n="c">kathayasva mamādya tvaṁ</l>
<l n="d">chettum arhasi saṁśayam</l>
</lg>

<lg n="19.50" met="anuṣṭubh">

<l n="uvaca">anarthayajña uvāca</l>


<l n="a">carācarāṇāṁ bhūtānāṁ</l>
<l n="b">tatra śreṣṭho - carāḥ smr̥tāḥ</l>

<l n="c">carāṇāṁ caiva sarveṣāṁ</l>
<l n="d">buddhimān śreṣṭha ucyate</l>
</lg>

<lg n="19.51" met="anuṣṭubh">

<l n="a">buddhimānṣu ! ca sarveṣu</l>
<l n="b">tataḥ śreṣṭha narāḥ smr̥tāḥ</l>

<l n="c">narāṇāṁ caiva sarveṣāṁ</l>
<l n="d">brāhmaṇaḥ śreṣṭha ucyate</l>
</lg>

<lg n="19.52" met="anuṣṭubh">

<l n="a">vidvarsv api ca sarveṣu</l>
<l n="b">kr̥tabuddhir viśiṣyate</l>

<l n="c">kr̥tabuddhiṣu sarveṣu</l>
<l n="d">śreṣṭhaḥ kartā sa ucyate</l>
</lg>

<lg n="19.53" met="anuṣṭubh">

<l n="a">kartr̥ṣv api ca sarveṣu</l>
<l n="b">brahmavedī viśiṣyate</l>

<l n="c">brahmavedi paraṁ ! vipraḥ</l>
<l n="d">nānyaṁ vedmi paraṁtapaḥ</l>

<l n="e">sa vipraḥ sa tapasvī ca</l>
<l n="f">sa yogī sa śivaḥ smr̥taḥ</l>
</lg>

<lg n="19.54" met="anuṣṭubh">

<l n="ab">iti vr̥ṣasārasaṁgrahe dānayajñaviśeṣo nāma unaviṁśatitamo 'dhyāyaḥ</l>


</lg>

