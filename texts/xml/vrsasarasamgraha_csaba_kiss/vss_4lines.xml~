<l n="d">sa yogī bhuvaneśvaraḥ</l>
<app loc="22.38c">
<lem wit="#msCa #msCc #msNa #msNb #Ed">'bhyasate</lem>
<rdg wit="#msCb">labhyate</rdg>
</app>
<app loc="22.38d">
<lem wit="#msCa #msCb #msCc #msNa #msNb">°śvaraḥ</lem>
<rdg wit="#Ed">°śvara</rdg>
</app>
</lg>

<lg n="22.39" met="anuṣṭubh">

