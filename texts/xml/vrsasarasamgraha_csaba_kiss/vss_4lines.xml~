<lg n="13.1" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">ahiṁsātithyakānāṁ ca</l>
<l n="b">śruto dharmaḥ suvistaraḥ</l>

<l n="c">kiṁ na kurvanti manujāḥ</l>
<l n="d">sukhopāyaṁ mahat phalam</l>
</lg>

<lg n="13.2" met="anuṣṭubh">

<l n="a">svaśarīrasthito yajñaḥ</l>
<l n="b">svaśarīre sthitaṁ tapaḥ</l>

<l n="c">svaśarīre sthitaṁ tīrthaṁ</l>
<l n="d">śruto vistarato mayā</l>
</lg>

<lg n="13.3" met="anuṣṭubh">

<l n="a">kimarthaṁ bhagavan brūhi</l>
<l n="b">sukhopāyaṁ mahat phalam</l>

<l n="c">kiṁ nivr̥ttās tu deveśa</l>
<l n="d">r̥ṣidaivatamānuṣāḥ</l>
</lg>

<lg n="13.4" met="anuṣṭubh">

<l n="uvaca">mahādeva uvāca</l>

<app loc="13.4uvaca">
<lem wit="#msCa">mahādeva</lem>
<rdg wit="#Ed">bhagavān</rdg>
</app>

<l n="a">adya pr̥ṣṭena kathitaṁ</l>
<l n="b">gopitaṁ r̥ṣi sundari</l>

<l n="c">mānuṣāṇāṁ hitārthāya</l>
<l n="d">tava ca varavarṇini</l>
</lg>

<lg n="13.5" met="anuṣṭubh">

<l n="a">adyaprabhr̥ti deveśi</l>
<l n="b">khyātir loke bhaviṣyati</l>

<l n="c">dhanyā evaṁ cariṣyanti</l>
<l n="d">adhanyā na ramanti tam</l>
</lg>

<lg n="13.6" met="anuṣṭubh">

<l n="a">triguṇena tu bandhena</l>
<l n="b">baddhā pāśadr̥ḍhena tu</l>

<l n="c">tenārthena ramanty atra</l>
<l n="d">jānanto 'pi vimohitāḥ</l>
</lg>

<lg n="13.7" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">kiṁ vā triguṇabandheti</l>
<l n="b">brūhi saṁśayachedaka</l>

<l n="c">adyāpi mama deveśa</l>
<l n="d">mohotpannas tribandhanaiḥ</l>
</lg>

<lg n="13.8" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">prākr̥taṁ vaikr̥taṁ caiva</l>
<l n="b">dakṣiṇābandham eva ca</l>

<l n="c">etenaiva tu bandhena</l>
<l n="d">baddhāḥ varṇāśramāḥ sadā</l>
</lg>

<lg n="13.9" met="anuṣṭubh">

<l n="a">jñānahīnā nivartante</l>
<l n="b">paramaṁ prāpya tatparam</l>

<l n="c">iṣṭastrīṇā nivartante</l>
<l n="d">dhanadhānyasamuccaye</l>

<l n="e">snehād ākr̥ṣya manasāṁ</l>
<l n="f">bandhaḥ prākr̥ta ucyate</l>
</lg>

<lg n="13.10" met="anuṣṭubh">

<l n="a">yogayuktena manasā</l>
<l n="b">yad yad aiśvaryam āpyate</l>

<l n="c">tac ca vaikr̥tabandhas tu</l>
<l n="d">yadi tatrānurajyate</l>
</lg>

<lg n="13.11" met="anuṣṭubh">

<l n="a">ārāmodyānavāpīṣu</l>
<l n="b">dānakratuphaleṣu ca</l>

<l n="c">āśaktamanasā vācā</l>
<l n="d">dakṣiṇābandhaḥ kathyate</l>
</lg>

<lg n="13.12" met="anuṣṭubh">

<l n="a">anenaiva tu pāśena</l>
<l n="b">baddhāvānaravad yathā</l>

<l n="c">mokṣitaṁ na ca śaknoti</l>
<l n="d">itaś cetaś ca dhāvati</l>
</lg>

<lg n="13.13" met="anuṣṭubh">

<l n="a">devāsuramanuṣyeṣu</l>
<l n="b">tiryeṣu narakeṣu ca</l>

<l n="c">bhramante cakrayantreva</l>
<l n="d">? yāvat tattvaṁ na vindati</l>
<l n="c">bhramante cakrayantreva ?</l>
<l n="d">yāvat tattvaṁ na vindati</l>
</lg>

<lg n="13.14" met="anuṣṭubh">

<l n="a">garbhavāsaparikleśau</l>
<l n="b">janmamr̥tyu punaḥ punaḥ</l>

<l n="c">vyādhiḥ śokabhayāyāsa</l>
<l n="d">cintayā jarayā hataḥ</l>
</lg>

<lg n="13.15" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">garbhotpattiḥ kathaṁ deva</l>
<l n="b">yogī labhati kīdr̥śīm</l>

<l n="c">kīdr̥śaṁ labhate garbhaḥ</l>
<l n="d">śrotuṁ naḥ pratyudīryatām</l>
</lg>

<lg n="13.16" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">śr̥ṇu devi pravakṣyāmi</l>
<l n="b">garbhotpattir yathākramam</l>

<l n="c">yathā saṁśayavicchedaṁ</l>
<l n="d">bhaviṣyasi varānane</l>
</lg>

<lg n="13.17" met="anuṣṭubh">

<l n="a">akṣarāt prabhavo brahmā</l>
<l n="b">karmabaddhasamudbhavam</l>

<l n="c">karmato yajñaprabhavo</l>
<l n="d">yajñato dhūmasambhavaḥ</l>
</lg>

<lg n="13.18" met="anuṣṭubh">

<l n="a">parjanyād annam utpattir</l>
<l n="b">annād bhūtāni jajñire</l>

<l n="c">annād rasasamutpatti</l>
<l n="d">rasāc choṇitasambhavaḥ</l>
</lg>

<lg n="13.19" met="anuṣṭubh">

<l n="a">śoṇitāt - māṁsa-m-utpatti</l>
<l n="b">māṁsād medasamudbhavaḥ</l>

<l n="c">medaso 'sthīni jāyante</l>
<l n="d">asthibhyo majjasambhavaḥ</l>
</lg>

<lg n="13.20" met="anuṣṭubh">

<l n="a">majjāyās tu bhavec chukraṁ</l>
<l n="b">naraḥ śukrasamudbhavaḥ</l>

<l n="c">śukraśoṇitasaṁyogād</l>
<l n="d">garbhotpattis tataḥ smr̥taḥ</l>
</lg>

<lg n="13.21" met="anuṣṭubh">

<l n="a">agnisomātmakaṁ devi</l>
<l n="b">śarīradvayadhātutaḥ</l>

<l n="c">somadhātusmr̥taṁ śukram</l>
<l n="d">agnidhāturajasmr̥tam</l>

<l n="e">agnisomāśrayaṁ devi</l>
<l n="f">śarīram iti saṁjñitam</l>
</lg>

<lg n="13.22" met="anuṣṭubh">

<l n="a">māsī māsī r̥tuḥ strīṇāṁ</l>
<l n="b">bhavatīha na saṁśayaḥ</l>

<l n="c">r̥tukāle prasarpyeta</l>
<l n="d">na sukhārthaṁ varānane</l>
</lg>

<lg n="13.23" met="anuṣṭubh">

<l n="a">putrakāmaprayuñjīta</l>
<l n="b">dharmārthaś ca yaśasvini</l>

<l n="c">pumān strīpuṁ prayuñjīta</l>
<l n="d">araṇī bahutāśanaḥ</l>
</lg>

<lg n="13.24" met="anuṣṭubh">

<l n="a">pumān śukrādhiko jñeyaḥ</l>
<l n="b">kanyā raktādhikā bhavet</l>

<l n="c">samaśukre ca rakte ca</l>
<l n="d">sa ca jāyen napuṁsakaḥ</l>
</lg>

<lg n="13.25" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">dviyamā triyamā caiva</l>
<l n="b">kathaṁ jāyeta gurviṇī</l>

<l n="c">kathaṁ strīdviyamā jāyet</l>
<l n="d">kathaṁ vā puruṣadvayam</l>
</lg>

<lg n="13.26" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">raktādhikā smr̥tā kanyā</l>
<l n="b">jāyate varavarṇini</l>

<l n="c">vāyunā ca dvidhā bhinnā</l>
<l n="d">kanyakadviyamā smr̥tā</l>
</lg>

<lg n="13.27" met="anuṣṭubh">

<l n="a">śukrādhikās tu puruṣa</l>
<l n="b">dvidhā bhinnānilena tu</l>

<l n="c">dviyamā puruṣo jñeyā</l>
<l n="d">triyamās tu tridhā kr̥te</l>
</lg>

<lg n="13.28" met="anuṣṭubh">

<l n="a">r̥tusnātā yadā nārī</l>
<l n="b">yadi garbhādi gr̥hyati</l>

<l n="c">prathame ca dvitīye ca</l>
<l n="d">tr̥tīye ca sa jīvati</l>
</lg>

<lg n="13.29" met="anuṣṭubh">

<l n="a">sameṣu janayet putraḥ</l>
<l n="b">kanyakā viṣame dine</l>

<l n="c">ṣaṣṭyāṣṭamau ca daśamī</l>
<l n="d">dvādaśī ca pumān bhavet</l>
</lg>

<lg n="13.30" met="anuṣṭubh">

<l n="a">pañcamī saptamī caiva</l>
<l n="b">navamekādaśī striyaḥ</l>

<l n="c">samarakte ca śukre ca</l>
<l n="d">śyāmaḥ saṁjāyate pumān</l>
</lg>

<lg n="13.31" met="anuṣṭubh">

<l n="a">rudhiraṁ tv ekarātreṇa</l>
<l n="b">kalalaṁ pratipadyate</l>

<l n="c">kalalaṁ pañcarātreṇa</l>
<l n="d">arbudatvaṁ prajāyate</l>
</lg>

<lg n="13.32" met="anuṣṭubh">

<l n="a">arbudaḥ saptarātreṇa</l>
<l n="b">māṁsapeśī samudbhavaḥ</l>

<l n="c">dvitīyaṁ saptarātreṇa</l>
<l n="d">tat sarvaṁ māṁsaśoṇitam</l>
</lg>

<lg n="13.33" met="anuṣṭubh">

<l n="a">tr̥tīyaṁ saptarātreṇa</l>
<l n="b">hr̥dayaṁ jāyate tataḥ</l>

<l n="c">tataḥ sarvāṇi gātrāṇi</l>
<l n="d">śiraś caivopajāyate</l>
</lg>

<lg n="13.34" met="anuṣṭubh">

<l n="a">hr̥daye jāyamāne tu</l>
<l n="b">mūrcchāntandrirarocakaḥ</l>

<l n="c">striyāḥ dhardiḥ praśekaś ca</l>
<l n="d">daurbalyaṁ copajāyate</l>
</lg>

<lg n="13.35" met="anuṣṭubh">

<l n="a">tasyā hi hr̥dayaṁ nārī</l>
<l n="b">yadi bhakṣyati kiṁcana</l>

<l n="c">bhakṣyaṁ lohyaṁ tathā peyam</l>
<l n="d">upabhogās tathāyayat</l>
</lg>

<lg n="13.36" met="anuṣṭubh">

<l n="a">śayanāsanayānāni</l>
<l n="b">vastrāṇy ābharaṇāni ca</l>

<l n="c">yad yad ākāṁkṣate kiṁcit</l>
<l n="d">tat tad āsyai pradāpayet</l>
</lg>

<lg n="13.37" met="anuṣṭubh">

<l n="a">nāyā saṁkārayec cāsyā</l>
<l n="b">na caivam avamānayet</l>

<l n="c">mukham āpāṇḍuraṁ snigdhaṁ</l>
<l n="d">kapolastanakeśayoḥ</l>
</lg>

<lg n="13.38" met="anuṣṭubh">

<l n="a">śarīraś ca śriyā jaṣṭuṁ</l>
<l n="b">pīnoruśroṇi vakṣasam</l>

<l n="c">liṅgerebhir vijānīyāṁ</l>
<l n="d">garbhe jīvaṁ pratiṣṭhitam</l>
</lg>

<lg n="13.39" met="anuṣṭubh">

<l n="a">caturthe saptarātreṇa</l>
<l n="b">śiraś caivopajāyate</l>

<l n="c">pañcamasaptarātreṇa</l>
<l n="d">grīvā tatropajāyate</l>
</lg>

<lg n="13.40" met="anuṣṭubh">

<l n="a">ṣaṣṭhamasaptarātreṇa</l>
<l n="b">skandhagātraṁ prajāyate</l>

<l n="c">saptamasaptarātreṇa</l>
<l n="d">pr̥ṣṭhavaṁśa prajāyate</l>
</lg>

<lg n="13.41" met="anuṣṭubh">

<l n="a">aṣṭamasaptarātreṇa</l>
<l n="b">pāṇī jāyate cobhayau</l>

<l n="c">saptarātraṁ nava prāpya</l>
<l n="d">jāyate hr̥di pañjaram</l>
</lg>

<lg n="13.42" met="anuṣṭubh">

<l n="a">daśame saptarātre ca</l>
<l n="b">pādau jāyate cobhau</l>

<l n="c">udaraś copajāyeta</l>
<l n="d">saptaikādaśarātrike</l>
</lg>

<lg n="13.43" met="anuṣṭubh">

<l n="a">dvādaśasaptarātreṇa</l>
<l n="b">kukṣipārśveḥ prajāyate</l>

<l n="c">saptatraidaśarātreṇa</l>
<l n="d">kuṭisutropajāyate</l>
</lg>

<lg n="13.44" met="anuṣṭubh">

<l n="a">navaty aṣṭamarāteṇa</l>
<l n="b">jāyate sūtraviṁśati</l>

<l n="c">saptapañcadaśāhena</l>
<l n="d">sarvamedaḥ prajāyate</l>
</lg>

<lg n="13.45" met="anuṣṭubh">

<l n="a">ṣoḍaśasaptarātreṇa</l>
<l n="b">athisarvāṇi jāyate</l>

<l n="c">saptasaptadaśāhena</l>
<l n="d">jāyate snāyubandhanam</l>
</lg>

<lg n="13.46" met="anuṣṭubh">

<l n="a">saptamāṣṭādaśāhena</l>
<l n="b">jāyate mukhamaṇḍalam</l>

<l n="c">saptonaviṁśarātreṇa</l>
<l n="d">ghrāṇavaṁśaḥ prajāyate</l>
</lg>

<lg n="13.47" met="anuṣṭubh">

<l n="a">saptaviṁśatirātreṇa</l>
<l n="b">naitranāliṁ prajāyate</l>

<l n="c">saptaikaviṁśarātreṇa</l>
<l n="d">karṇayugmaṁ prajāyate</l>
</lg>

<lg n="13.48" met="anuṣṭubh">

<l n="a">dvāviṁśasaptarātreṇa</l>
<l n="b">jāyate dvau bhruvau tataḥ</l>

<l n="c">saptatriviṁśarātreṇa</l>
<l n="d">gaṇḍayugmaṁ prajāyate</l>
</lg>

<lg n="13.49" met="anuṣṭubh">

<l n="a">caturviṁśatisaptāhe</l>
<l n="b">oṣṭhayugmaṁ prajāyate</l>

<l n="c">pañcaviṁśatisaptāhe</l>
<l n="d">jihvā jāyate sundari</l>
</lg>

<lg n="13.50" met="anuṣṭubh">

<l n="a">ṣaḍviṁśasaptarātreṇa</l>
<l n="b">dantapaṅkti prajāyate</l>

<l n="c">unaviṁśatisaptāhe</l>
<l n="d">jāyate ca tvag eva ca</l>
</lg>

<lg n="13.51" met="anuṣṭubh">

<l n="a">triṁśatasaptarātreṇa</l>
<l n="b">jāyate nābhimaṇḍalam</l>

<l n="c">saptaikatriṁśarātreṇa</l>
<l n="d">sarvarandhraṁ prajāyate</l>
</lg>

<lg n="13.52" met="anuṣṭubh">

<l n="a">dvātriṁśasaptarātreṇa</l>
<l n="b">nakhaviṁśati jāyate</l>

<l n="c">tritriṁśasaptarātreṇa</l>
<l n="d">sarve sandhiḥ prajāyate</l>
</lg>

<lg n="13.53" met="anuṣṭubh">

<l n="a">pañcatriṁśati saptāhe</l>
<l n="b">sarvamarma prajāyate</l>

<l n="c">ṣaḍtriṁśasaptarātreṇa</l>
<l n="d">vedanā copajāyate</l>
</lg>

<lg n="13.54" met="anuṣṭubh">

<l n="a">saptatriṁśatisaptāhe</l>
<l n="b">īrṣyādveṣaḥ prajāyate</l>

<l n="c">aṣṭatriṁśatisaptāhe</l>
<l n="d">pañcātmakasamanvitam</l>
</lg>

<lg n="13.55" met="anuṣṭubh">

<l n="a">sarvāṅgam aṅgasampūrṇaḥ</l>
<l n="b">paripakva(ḥ) sa tiṣṭhati</l>

<l n="c">mātusvāśitapītaś ca</l>
<l n="d">nābhisūtrāganena tu</l>
</lg>

<lg n="13.56" met="anuṣṭubh">

<l n="a">ajātasyopadhāryante</l>
<l n="b">garbhasthasyaiva jantavaḥ</l>

<l n="c">tataḥ praviśate dehe</l>
<l n="d">nidrāsvapna yathā tathā</l>
</lg>

<lg n="13.57" met="anuṣṭubh">

<l n="a">nopalabhyati sūkṣmatvād</l>
<l n="b">araṇy agnir yathā tathā</l>

<l n="cd">garbhodakena siktāṅgajarāyā pariveṣṭitaḥ</l>

</lg>

<lg n="13.58" met="anuṣṭubh">

<l n="a">jāti smarati tatrastho</l>
<l n="b">jantuś cetaḥsamanvitaḥ</l>

<l n="c">mr̥taś cāhaṁ punarjāto</l>
<l n="d">bhūyaś caiva punarmr̥taḥ</l>
</lg>

<lg n="13.59" met="anuṣṭubh">

<l n="a">sthāvarāṇāṁ sahasreṣu</l>
<l n="b">jāto 'smi vividheṣu ca</l>

<l n="c">caturvarṇavivarṇeṣu</l>
<l n="d">mānuṣeṣu sahasraśaḥ</l>
</lg>

<lg n="13.60" met="anuṣṭubh">

<l n="a">sāmprataṁ ca punar garbhaḥ</l>
<l n="b">kleśaḥ prāptaḥ suduḥsahaḥ</l>

<l n="c">idānīṁ jātamātro 'haṁ</l>
<l n="d">saṁskāraiś cāpi saṁskr̥taḥ</l>
</lg>

<lg n="13.61" met="anuṣṭubh">

<l n="a">yogam evābhisevāmi</l>
<l n="b">sā[ṁ]khyaṁ vā pañcaviṁśakam</l>

<l n="c">yatra janmajarā nāsti</l>
<l n="d">yatra mr̥tyuś ca nāsti vai</l>
</lg>

<lg n="13.62" met="anuṣṭubh">

<l n="a">yatra brahma paraṁ vedyaṁ</l>
<l n="b">cariṣyāmi yatavrataḥ</l>

<l n="c">evam ādīny anekāni</l>
<l n="d">cintayitvā punaḥ punaḥ</l>
</lg>

<lg n="13.63" met="anuṣṭubh">

<l n="a">yāvat tiṣṭhati garbhastho</l>
<l n="b">jāti smarati pūrvikām</l>

<l n="c">tato jāyati kaṣṭena</l>
<l n="d">mahākleśena mānavaḥ</l>
</lg>

<lg n="13.64" met="anuṣṭubh">

<l n="a">yoniyantrasutīvreṇa</l>
<l n="b">pīḍyamānasuduḥkhitaḥ</l>

<l n="c">jātamātrosmr̥tibhraṁśo</l>
<l n="d">bhavatīha acetaneḥ</l>
</lg>

<lg n="13.65" met="anuṣṭubh">

<l n="a">māyāmudgaratīvreṇa</l>
<l n="b">hataḥ kiṁ śubham ācaret</l>

<l n="c">eṣa garbhasamutpattiḥ</l>
<l n="d">kathito 'smi varānane</l>

<l n="e">duḥkhasaṁsārapraśamaṁ</l>
<l n="f">kiṁ bhūyaḥ śrotum icchasi</l>
</lg>

<lg n="13.66" met="anuṣṭubh">

<l n="ab">iti vr̥ṣasārasaṁgrahe garbhotpattir nāma trayadaśo ! 'dhyāyaḥ</l>


</lg>

<!-- new chapter-->

<lg n="14.1" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">atidīrghātihrasvaś ca</l>
<l n="b">pumān kenopajāyate</l>

<l n="c">atigauro 'tikr̥ṣṇaś ca</l>
<l n="d">naro bhavati kiṁ prabho</l>
</lg>

<lg n="14.2" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">gr̥hītagarbhā yā nārī</l>
<l n="b">nityam uttānaśālinī</l>

<l n="c">prasāritavimuktātmā</l>
<l n="d">so 'tidīrghaḥ prajāyate</l>
</lg>

<lg n="14.3" met="anuṣṭubh">

<l n="a">gr̥hītagarbhā yā nārī</l>
<l n="b">śete saṁkucitā sadā</l>

<l n="c">raso 'nnādīni kaṭukaṁ</l>
<l n="d">sevanāḥ hrasva jāyate</l>
</lg>

<lg n="14.4" met="anuṣṭubh">

<l n="a">gr̥hītagarbhā yā nārī</l>
<l n="b">nityaṁ kṣīropasevitā</l>

<l n="c">varakodravaśālī ca</l>
<l n="d">bhuktā cāpi yavodanam</l>
</lg>

<lg n="14.5" met="anuṣṭubh">

<l n="a">śuklavastrasrajā yuktā</l>
<l n="b">sātigauraṁ prajāyate</l>

<l n="c">gr̥hītagarbhā yā nārī</l>
<l n="d">bāladhānyāni sevate</l>
</lg>

<lg n="14.6" met="anuṣṭubh">

<l n="a">kr̥ṣṇakodravatailādi</l>
<l n="b">māṣakr̥ṣṇayavodanam</l>

<l n="c">kr̥ṣṇavastrasrajādīni</l>
<l n="d">tasyāḥ kr̥ṣṇaḥ prajāyate</l>
</lg>

<lg n="14.7" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="ab">jātyandho jāyate kasmānṣaṇḍhobhīrur hatendriyaḥ</l>


<l n="c">kujo vā vāmano vāpi</l>
<l n="d">paṅgavaḥ sthūlaśiraḥ katham</l>
</lg>

<lg n="14.8" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">gr̥hītagarbhā yā nārī</l>
<l n="b">tīkṣṇoṣṇāny upasevate</l>

<l n="c">laśunānipalāṇḍūni</l>
<l n="d">karañjamūlakāni ca</l>
</lg>

<lg n="14.9" met="anuṣṭubh">

<l n="a">pippalīśr̥ṅgaveraṁ ca</l>
<l n="b">sarṣapānmaricāni ca</l>

<l n="c">āsavaś ca parikliṣṭā</l>
<l n="d">ye cānye kaṭutiktakāḥ</l>
</lg>

<lg n="14.10" met="anuṣṭubh">

<l n="a">tīkṣṇaṁ tu sevamānā yā</l>
<l n="b">jātyandho jāyate sutaḥ</l>

<l n="c">mithyāpacārāḥ strīpuṁso</l>
<l n="d">vyāpanne śukraśoṇite</l>

<l n="e">yadā garbhāśaye raktaṁ</l>
<l n="f">striyāḥ pūrvaṁ niṣicyate</l>
</lg>

<lg n="14.11" met="anuṣṭubh">

<l n="a">paścāc chukraṁ raktakāle</l>
<l n="b">tadāṣaṇḍaḥ prajāyate</l>

<l n="cd">trastodvigno yadā bhītastrīpuṁsāṁsūpajāyate</l>

</lg>

<lg n="14.12" met="anuṣṭubh">

<l n="ab">tatra yo jāyate garbhabhiruḥ krandanako bhavet</l>


<l n="c">nisargakāle śukrasya</l>
<l n="d">vighna utpadyate yadā</l>
</lg>

<lg n="14.13" met="anuṣṭubh">

<l n="a">indriyāvartavighne tu</l>
<l n="b">tadā jāyed atindriyaḥ</l>

<l n="c">gr̥hītagarbhā yā nārī</l>
<l n="d">vātalāny upasevate</l>
</lg>

<lg n="14.14" met="anuṣṭubh">

<l n="a">kaṭukāni kaṣāyāni</l>
<l n="b">tiktāni ca viśeṣataḥ</l>

<l n="c">vātaḥ prakupitas tasyā</l>
<l n="d">garbham ātuhya tiṣṭhati</l>
</lg>

<lg n="14.15" met="anuṣṭubh">

<l n="a">kubjas tu jāyate tasmād</l>
<l n="b">garbhād vātanipīḍanāt</l>

<l n="c">nityasāsavaśīlāyā</l>
<l n="d">tathā cotkaṭukāśanā</l>
</lg>

<lg n="14.16" met="anuṣṭubh">

<l n="a">tasyā saṁhanyate garbho</l>
<l n="b">vāmanas tena jāyate</l>

<l n="c">ativyāyāmaśīlā tu</l>
<l n="d">ya nārī viṣamāsanī</l>
</lg>

<lg n="14.17" met="anuṣṭubh">

<l n="a">garbhaḥ saṁkṣubhyate tasyāḥ</l>
<l n="b">paṣaṇḍas tenopajāyate</l>

<l n="c">gr̥hītagarbhā yā nārī</l>
<l n="d">rūkṣadhānyāni sevate</l>
</lg>

<lg n="14.18" met="anuṣṭubh">

<l n="a">vātaśleṣmaśirastho vai</l>
<l n="b">tasyā garbhasya kupyate</l>

<l n="c">tataḥ sthūlaśirās tena</l>
<l n="d">pumān jāyaty asaṁśayaḥ</l>
</lg>

<lg n="14.19" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">karālāṅgā hanuḥ paṅgūr</l>
<l n="b">mūko gadgadabhāṣakaḥ</l>

<l n="c">vikr̥tākṣas tv anakṣo vā</l>
<l n="d">bhavadrasvagudaḥ katham</l>
</lg>

<lg n="14.20" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">karālas tena doṣeṇa</l>
<l n="b">jāyate mānavas tathā</l>

<l n="c">atha karālaṁ kurute</l>
<l n="d">nārī lamboticūcukā</l>

<l n="e">tasmād anena doṣeṇa</l>
<l n="f">karālo jāyate pumān</l>
</lg>

<lg n="14.21" met="anuṣṭubh">

<l n="a">gr̥hītagarbhā yā nārī</l>
<l n="b">raktapittāmayārditā</l>

<l n="c">gohanuṁ janayet yeṣā</l>
<l n="d">raktapittaprakopitaḥ</l>
</lg>

<lg n="14.22" met="anuṣṭubh">

<l n="a">gr̥hītagarbhā yā nārī</l>
<l n="b">vātaśūlair upadrutā</l>

<l n="c">śukro dāvartanī cāpi</l>
<l n="d">paṅgū janayate sutam</l>
</lg>

<lg n="14.23" met="anuṣṭubh">

<l n="a">kṣudhārtā vedanārtā ca</l>
<l n="b">satataś copavāsinī</l>

<l n="c">mūkaṁ janayate bālaṁ</l>
<l n="d">dauhr̥daś ca vimānitā</l>
</lg>

<lg n="14.24" met="anuṣṭubh">

<l n="a">gr̥hītagarbhā yā nārī</l>
<l n="b">visr̥jet - māsa māsikam</l>

<l n="c">anakṣo jāyate tasyā</l>
<l n="d">garbhaśoṇitasaṁkṣayāt</l>
</lg>

<lg n="14.25" met="anuṣṭubh">

<l n="a">atha grastā yadā nārī</l>
<l n="b">vāto dāvartapīḍitā</l>

<l n="c">gr̥hītagarbhā rukṣāṇi</l>
<l n="d">vātalāny upasevate</l>
</lg>

<lg n="14.26" met="anuṣṭubh">

<l n="a">vātasthānantatas tasyā</l>
<l n="b">garbhasyāpīḍitaṁ bhavet</l>

<l n="c">agudo jāyate tasmāj</l>
<l n="d">jātaś cāpi na jīvati</l>
</lg>

<lg n="14.27" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">hīnāṅgo jāyate kasmād</l>
<l n="b">adhikāṅgo 'pi vā katham</l>

<l n="c">śvetapiṅgekṣaṇaḥ kasmāt</l>
<l n="d">kathaṁ lohitalocanaḥ</l>
</lg>

<lg n="14.28" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">garbhasya jāyamānasya</l>
<l n="b">- - -  jāyate nilaḥ</l>
<l n="a">garbhasya jāyamānasya -</l>
<l n="b">- -  jāyate nilaḥ</l>
<l n="a">garbhasya jāyamānasya - -</l>
<l n="b">-  jāyate nilaḥ</l>
<l n="a">garbhasya jāyamānasya - - -</l>
<l n="b">jāyate nilaḥ</l>
<l n="a">garbhasya jāyamānasya - - -</l>
<l n="b">jāyate nilaḥ</l>

<l n="cd">vātābhyāṁ śleṣmaṇāt - - - tadaṅgaṁ parihīyate</l>

</lg>

<lg n="14.29" met="anuṣṭubh">

<l n="a">hīnāṅgo jāyate tasmāt</l>
<l n="b">pumān vātaprakopataḥ</l>

<l n="c">gr̥hītagarbhā yā nārī</l>
<l n="d">madhurāṇy upasevate</l>
</lg>

<lg n="14.30" met="anuṣṭubh">

<l n="a">śr̥ṅgāṭakakalotyāni</l>
<l n="b">śālūkāni viśāni ca</l>

<l n="c">mocaṁ tālaphalaṁ caiva</l>
<l n="d">nārikelaphalaṁ tathā</l>
</lg>

<lg n="14.31" met="anuṣṭubh">

<l n="a">atikṣṇaṁ sevamānā tu</l>
<l n="b">adhikāṅgaṁprasūyate</l>

<l n="c">piṅgākṣaḥ śleṣmapittābhyāṁ</l>
<l n="d">śvetākṣaḥ śleṣmaṇā bhavet</l>
</lg>

<lg n="14.32" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">kathaṁ vā jāyate putraḥ</l>
<l n="b">kanyakā kena jāyate</l>

<l n="c">apumān kena jāyeta</l>
<l n="d">dviyamā triyamā tathā</l>
</lg>

<lg n="14.33" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">śukrādhikaḥ pumān jñeyaḥ</l>
<l n="b">kanyā raktādhikā bhavet</l>

<l n="c">raktaśukrasamatvena</l>
<l n="d">jāyate sa napuṁsakaḥ</l>
</lg>

<lg n="14.34" met="anuṣṭubh">

<l n="a">piṇḍībhūto yadā garbha</l>
<l n="b">mārutau vibhaved dvidhā</l>

<l n="c">evaṁ te dviyamā jñeyās</l>
<l n="d">triyamā ca tridhā kr̥te</l>
</lg>

<lg n="14.35" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">śoṇitaṁ māṁsa medaś ca</l>
<l n="b">asthi majjā ca pañcamī</l>

<l n="c">śarīrasthāni dr̥śyante</l>
<l n="d">śukrasthānaṁ na dr̥śyate</l>
</lg>

<lg n="14.36" met="anuṣṭubh">

<l n="a">tasyotpattiś ca sthānaṁ ca</l>
<l n="b">jñātum icchāmi tattvataḥ</l>

<l n="c">kathayasva trilokeśa</l>
<l n="d">cchettum arhasi saṁśayaḥ</l>
</lg>

<lg n="14.37" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">manaḥ śukrasya prabhavaṁ</l>
<l n="b">ghrāṇaṁ śrotraṁ tathākṣiṇī</l>

<l n="cd">sthānaṁ tu sarvāṅgasamasparśāt sparśaḥ pravartate</l>

</lg>

<lg n="14.38" met="anuṣṭubh">

<l n="a">yathā niṣiktaṁ kṣīraṁ tu</l>
<l n="b">payasād dadhi jāyate</l>

<l n="c">pramathyamānadadhnas tu</l>
<l n="d">sarpiso 'pi tathāgamaḥ</l>
</lg>

<lg n="14.39" met="anuṣṭubh">

<l n="a">evaṁ śarīra nirgaccet</l>
<l n="b">- śukraṁ śukravahā śirāḥ</l>
<l n="a">evaṁ śarīra nirgaccet -</l>
<l n="b">śukraṁ śukravahā śirāḥ</l>

<l n="c">pūrayitvānupūrveṇa</l>
<l n="d">asthayo pratipadyate</l>
</lg>

<lg n="14.40" met="anuṣṭubh">

<l n="a">tatas tu tāḥ śukravahā</l>
<l n="b">meḍhranābhīm anusr̥tāḥ</l>

<l n="c">nāśukraṁ tat tu siñcanti</l>
<l n="d">tasmād garbhasya sambhavaḥ</l>
</lg>

<lg n="14.41" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">kathaṁ vedayate jāti</l>
<l n="b">kathaṁ jātismaro bhavet</l>

<l n="c">etasmin saṁśayaṁ me 'dya</l>
<l n="d">chettum arhasi śaṅkara</l>
</lg>

<lg n="14.42" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">bhāvitātmāṁ ca yo jantur</l>
<l n="b">devi bhogādhikaṁ ca yat</l>

<l n="c">brahmavid jñānasaṁyuktaḥ</l>
<l n="d">sa jātiṁ smarate pumān</l>
</lg>

<lg n="14.43" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">kathaṁ sadyo gr̥hītasya</l>
<l n="b">liṅgagarbhasya dr̥śyate</l>

<l n="c">etat kathaya deveśa</l>
<l n="d">rahaḥ kāle maheśvara</l>
</lg>

<lg n="14.44" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">pipāśāromaharṣaṁ ca</l>
<l n="b">vepanaṁ gātrasīdanam</l>

<l n="c">nidrāsvedaṁ ca tandrā ca</l>
<l n="d">muhūrtam upajāyate</l>
</lg>

<lg n="14.45" met="anuṣṭubh">

<l n="a">nikledatvaṁ kharatvaṁ ca</l>
<l n="b">yonyāt samupajāyate</l>

<l n="c">na cārdravaṁvai dr̥śyeta</l>
<l n="d">śukrasya rajaso 'pi vā</l>

<l n="e">sadyogr̥hītagarbhāyā</l>
<l n="f">liṅgāny etāni tattvataḥ</l>
</lg>

<lg n="14.46" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">kena liṅgena vijñeyaṁ</l>
<l n="b">putrajanma maheśvara</l>

<l n="c">kanyakā kena liṅgena</l>
<l n="d">jñāyate kathayasva me</l>
</lg>

<lg n="14.47" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">pādorujaṅghapārśvaś ca</l>
<l n="b">dakṣiṇaṁ yadi hy unnataḥ</l>

<l n="c">dakṣiṇaṁ vipulaṁ tatra</l>
<l n="d">tadā putraḥ prajāyate</l>
</lg>

<lg n="14.48" met="anuṣṭubh">

<l n="a">vāmaś caiva yadā paśyet</l>
<l n="b">tadā jāyeta kanyakā</l>

<l n="c">unnataṁ madhyamasthāś ca</l>
<l n="d">tadā jāyet - napuṁsakam</l>
</lg>

<lg n="14.49" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">puṁsā kapolaromāni</l>
<l n="b">khalitaṁ kena jāyate</l>

<l n="c">kathaṁ strīṇāṁ na jāyeta</l>
<l n="d">romāṇi khalitaṁ tathā</l>
</lg>

<lg n="14.50" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">tathā vr̥ṣaṇagā jantor</l>
<l n="b">yasya retovahā śiraḥ</l>

<l n="c">nibaddhā mastake tālu</l>
<l n="d">kapolās tu samāśritāḥ</l>
</lg>

<lg n="14.51" met="anuṣṭubh">

<l n="a">taiḥ kapoleṣu romāṇi</l>
<l n="b">jāyante antaretasaḥ</l>

<l n="c">khalitaṁ śukradoṣeṇa</l>
<l n="d">narāṇām upajāyate</l>
</lg>

<lg n="14.52" met="anuṣṭubh">

<l n="a">śirā śukravahā strīṇāṁ</l>
<l n="b">na śūnyasyānna jāyate</l>

<l n="c">yātmāpālo ca kās tv agni</l>
<l n="d">dr̥ṣṭimaṇḍalasaṁśritaḥ ?</l>
</lg>

<lg n="14.53" met="anuṣṭubh">

<l n="ab">śoṇitai soktikoṣṭasthanniśoṣayati tattvataḥ</l>


<l n="c">nibaddhanty akṣipakṣmāṇi</l>
<l n="d">tena romāṇi ca bhruvoḥ</l>
</lg>

<lg n="14.54" met="anuṣṭubh">

<l n="a">aśukratvāc ca nārīṇāṁ</l>
<l n="b">khalitaṁ nopajāyate</l>

<l n="c">chāyāvyapagatasnehā</l>
<l n="d">rukṣāgātraśiroruhā</l>

<l n="e">grasatosmābhajaṭharā</l>
<l n="f">mr̥tagarbhaḥ prajāyate</l>
</lg>

<lg n="14.55" met="anuṣṭubh">

<l n="uvaca">devy uvāca</l>


<l n="a">somadhātu kathaṁ jñeyā</l>
<l n="b">agnidhātus tatheśvara</l>

<l n="c">pr̥thagbhāgaviśeṣeṇa</l>
<l n="d">kathayasva maheśvara</l>
</lg>

<lg n="14.56" met="anuṣṭubh">

<l n="uvaca">bhagavān uvāca</l>


<l n="a">śleṣmamedas tathā snāyuḥ</l>
<l n="b">asthidantanakhāni ca</l>

<l n="c">striyās tanyaś ca śukraś ca</l>
<l n="d">yac ca śvetaṁ tathākṣiṣu</l>
</lg>

<lg n="14.57" met="anuṣṭubh">

<l n="a">eteṣāṁ saumyabhāgatvāc</l>
<l n="b">chvetatvam upajāyate</l>

<l n="c">āgneyabhāvād raktatvaṁ</l>
<l n="d">kr̥ṣṇatvaṁ cāpi gacchati</l>
</lg>

<lg n="14.58" met="anuṣṭubh">

<l n="ab">tvagmāṁsarudhiraṁ majjādr̥ṣṭiroma tathaiva ca</l>


<l n="c">āgneyadhātusomaś ca</l>
<l n="d">kathito 'smi varānane</l>

<l n="e">brūhi brūhi viśālākṣi</l>
<l n="f">yady asti tava saṁśayaḥ</l>
</lg>

<lg n="14.59" met="anuṣṭubh">

<l n="ab">iti vr̥ṣasārasaṁgrahe praśnavyākaraṇo nāmaś caturdaśo 'dhyāyaḥ</l>


</lg>

